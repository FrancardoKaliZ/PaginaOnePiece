<body>
    <form action='@Url.Action("GuardarPersonaje", "Home", new{IdPersonaje= @ViewBag.IdPersonaje})' method="post"
        enctype="multipart/form-data">
        <label for="inputPassword5" class="form-label">Nombre</label>
        <input type="text" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock"
            name="NombrePersonaje">
        <div class="form-text">
        </div>
        <label for="inputPassword5" class="form-label">Info del personaje</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="InfoPersonaje"></textarea>
        <div class="form-text">
        </div>
        <br>
        <label for="exampleFormControlSelect1">En que mar nacio el personaje:</label>
        <div class="form-text" id="exampleFormControlSelect1">
            <select name="IdMar">
                 @foreach (Mar item in ViewBag.ListaMares)
                 {
                    <option value="@item.IdMar">@item.NombreMar</option>
            }
            </select>
        </div>
        <br>
        <br>
        <label for="exampleFormControlSelect2">Raza del personaje</label>
        <div class="form-text" id="exampleFormControlSelect2">
            <select name="IdRaza">
                 @foreach (Raza item in ViewBag.ListaRazas)
                 {
                    <option value="@item.IdRaza">@item.NombreRaza</option>
                 }
            </select>
        </div>
        <br>
        <br>
        <label for="exampleFormControlSelect1">Bando del personaje:</label>
        <div class="form-text" id="exampleFormControlSelect1">
            <select name="IdBando">
                 @foreach (Bando item in ViewBag.ListaBandos)
                 {
                    <option value="@item.IdBando">@item.NombreBando</option>
                }
            </select>
        <label for="exampleFormControlSelect1">Haki de armadura:</label>
        <div class="form-text" id="exampleFormControlSelect1">
            <select name="IdHakiArmadura">
                 @foreach (HakiArmadura item in ViewBag.ListaHakiA)
                 {
                    <option value="@item.IdHakiArmadura">@item.EstadoHA</option>
                }
            </select>
        </div>
        <label for="exampleFormControlSelect1">Haki de observacion:</label>
        <div class="form-text" id="exampleFormControlSelect1">
            <select name="IdHakiObservacion">
                 @foreach (HakiObservacion item in ViewBag.ListaHakiO)
                 {
                    <option value="@item.IdHakiObservacion">@item.EstadoHO</option>
                }
            </select>
        </div>
        <label for="exampleFormControlSelect1">Haki deL rey:</label>
        <div class="form-text" id="exampleFormControlSelect1">
            <select name="IdHakiRey">
                 @foreach (HakiRey item in ViewBag.ListaHakiR)
                 {
                    <option value="@item.IdHakiRey">@item.EstadoHR</option>
                }
            </select>
        </div>
        <input id="number" type="number" name="Recompensa">
        <label class="form-label" for="customFile">Foto del personaje</label>
        <input type="file" name="Foto" />
        <br>
        <br>
        <input type="hidden" name="IdTemporada" value="@ViewBag.IdTemporada">
        <input type="submit" value="Submit">
    </form>
</body>