<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - PaginaOneiece</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/PaginaOneiece.styles.css" asp-append-version="true" />
    </head>

    <body class="bodyLayout">
        <header>
            <div class="nav letras">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index"></a><img class="logo" src="/OnePieceLogo.jpg" alt=""></a>
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">One Piece</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Temporadas">Ver
                                        temporadas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="MenuMares">Menu mares</a>
                                </li>
                            </ul> 
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
        <script src="~/js/Ajax.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)
    </body>

</html>
